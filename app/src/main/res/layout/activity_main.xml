<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E3C190"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Calculadora"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="#5E2310"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/calculadora"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Valor 1"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/etvalor1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese el primer valor"
        android:gravity="center"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Valor 2"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/etvalor2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese el segundo valor"
        android:gravity="center"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnsumar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_margin="20dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnrestar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_margin="10dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnmultiplicar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_margin="10dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btndividir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_margin="10dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_margin="10dp"
            android:backgroundTint="#F10606"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>